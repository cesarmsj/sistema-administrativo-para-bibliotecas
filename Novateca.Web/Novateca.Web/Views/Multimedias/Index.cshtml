<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    @foreach (var item in Model)
    {
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div class="card" style="width: 250px; border: solid; border-color: aliceblue; border-radius: 5px;">
                <a asp-action="Details" asp-route-id="@item.MultimediaID">
                    <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.URLImage)" alt="Card image cap"
                         style="width:230px; height:200px; margin: 5px;"><br />
                </a>
                <div class="card-body" style="margin:5px;">
                    <h5 class="card-title text-center"><b>@Html.DisplayFor(modelItem => item.TitleMain)</b></h5>
                    <p class="card-author text-center" style="font-size: 12px">@Html.DisplayFor(modelItem => item.Director)</p>
                    <button class="collapsible"><p class="text-center">Ver sinopse</p></button>

                    <div class="content" style="padding: 0 18px; display: none; overflow: hidden; background-color: #f1f1f1;">
                        <p> <p class="card-abstract text-capitalize center" style="height: 100px; font-size: 10px">@Html.DisplayFor(modelItem => item.Abstract)</p>
                    </div>
                    <div class="card-options text-center">
                        <a asp-action="Edit" asp-route-id="@item.MultimediaID"><img src="~/images/edit.png" style="width:30px; height:30px; padding-right: 5px" /></a>
                        <a asp-action="Create" asp-route-id="@item.MultimediaID"><img src="~/images/like.png" style="width:30px; height:30px; padding-right: 5px" /></a>
                        <a asp-action="Create" asp-route-id="@item.MultimediaID"><img src="~/images/comment.png" style="width:30px; height:30px; padding-right: 5px" /></a>
                        <a asp-action="Create" asp-route-id="@item.MultimediaID"><img src="~/images/favorite.png" style="width:30px; height:30px; padding-right: 5px" /></a>
                        <a asp-action="Delete" asp-route-id="@item.MultimediaID"><img src="~/images/remove.png" style="width:30px; height:30px; padding-left: 5px" /></a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



