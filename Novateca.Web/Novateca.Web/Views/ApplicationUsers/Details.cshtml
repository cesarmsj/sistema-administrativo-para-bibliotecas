@model Novateca.Web.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserPagesLayout.cshtml";
}

<h2>Dados de cadastro</h2>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
        </dt>
        <dd>
           <img src="@Html.DisplayFor(model => model.URLProfilePicture)" style="width: 200px; height: 200px" />
        </dd><br />
        <dt>
            Primeiro nome:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            Sobrenome:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        @*<dt>
            CPF:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User_CPF)
        </dd>*@
        @*<dt>
            Username:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>*@
        <dt>
            Email:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Telefone:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar cadastro</a>
</div>
