@model Novateca.Web.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserPagesLayout.cshtml";
}
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" style="background-color:white;">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center">
            <h2>Dados de cadastro</h2>
            <hr />
            <div>
                <dl class="dl-horizontal">
                    <dt>
                    </dt>
                    <dd>
                        <img src="@Html.DisplayFor(model => model.URLProfilePicture)" style="width: 200px; height: 200px" />
                    </dd>
                    @*<a asp-action="PhotoPerfil" asp-controller="ApplicationUsers">Alterar foto de perfil</a>*@
                    <br />
                    <dt>
                        Primeiro nome:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>
                    <dt>
                        Sobrenome:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>
                    @*<dt>
                        CPF:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User_CPF)
                    </dd>*@
                    @*<dt>
                        Username:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserName)
                    </dd>*@
                    <dt>
                        Email:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt>
                        Telefone:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>

                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Editar cadastro</a>
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center">
            <h2>Minhas obras favoritas</h2>
            <hr />
            <h3>Livros favoritos</h3>
            @foreach (var favoriteBooks in ViewBag.favoriteBooks)
            {

                <p>@favoriteBooks</p>

            }
            <h3>Multimídias favoritas</h3>
            @foreach (var favoriteMultimedias in ViewBag.favoriteMultimedias)
            {

                <p>@favoriteMultimedias</p>

            }
            <h3>Periódicos</h3>
            @foreach (var favoriteNewspapers in ViewBag.favoriteNewspaper)
            {

                <p>@favoriteNewspapers</p>

            }

        </div>
    </div>
