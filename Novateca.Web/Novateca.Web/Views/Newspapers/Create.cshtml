@model Novateca.Web.Models.Newspaper

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserPagesLayout.cshtml";
}

<h2>Catalogação de periódico</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitleMain" class="control-label">Título:</label>
                <input asp-for="TitleMain" class="form-control" />
                <span asp-validation-for="TitleMain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubTitle" class="control-label">Subtítulo: (opcional)</label>
                <input asp-for="SubTitle" class="form-control" />
                <span asp-validation-for="SubTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edition" class="control-label">Edição:</label>
                <input asp-for="Edition" class="form-control" />
                <span asp-validation-for="Edition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfPublication" class="control-label">Local de Publicação:</label>
                <input asp-for="PlaceOfPublication" class="form-control" />
                <span asp-validation-for="PlaceOfPublication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishingCompany" class="control-label">Editora:</label>
                <input asp-for="PublishingCompany" class="form-control" />
                <span asp-validation-for="PublishingCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewspaperSubject" class="control-label">Assunto:</label>
                <input asp-for="NewspaperSubject" class="form-control" />
                <span asp-validation-for="NewspaperSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISSN" class="control-label">ISSN:</label>
                <input asp-for="ISSN" class="form-control" />
                <span asp-validation-for="ISSN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPeriodicity" class="control-label">Periodicidade:</label>
                <input asp-for="CurrentPeriodicity" class="form-control" />
                <span asp-validation-for="CurrentPeriodicity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvatarImage" class="control-label">Foto de perfil:</label>
                <input type="file" id="files" asp-for="AvatarImage" />
                <span asp-validation-for="AvatarImage" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="URLImage" class="control-label">Caminho da Imagem:</label>
            <input asp-for="URLImage" class="form-control" />
            <span asp-validation-for="URLImage" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <input type="submit" value="Catalogar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

