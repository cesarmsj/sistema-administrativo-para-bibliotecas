@model IEnumerable<Novateca.Web.Models.FavoriteNewspaper>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserPagesLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Newspaper)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavoriteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavoriteEnabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Newspaper.CurrentPeriodicity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavoriteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavoriteEnabled)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FavoriteNewspaperID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FavoriteNewspaperID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FavoriteNewspaperID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
