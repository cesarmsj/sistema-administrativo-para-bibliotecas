@model Novateca.Web.Models.FavoriteNewspaper

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_UserPagesLayout.cshtml";
}

<h2>Edit</h2>

<h4>FavoriteNewspaper</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FavoriteNewspaperID" />
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewspaperID" class="control-label"></label>
                <select asp-for="NewspaperID" class="form-control" asp-items="ViewBag.NewspaperID"></select>
                <span asp-validation-for="NewspaperID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FavoriteDate" class="control-label"></label>
                <input asp-for="FavoriteDate" class="form-control" />
                <span asp-validation-for="FavoriteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="FavoriteEnabled" /> @Html.DisplayNameFor(model => model.FavoriteEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

